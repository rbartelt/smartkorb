<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_edit_koerbe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".feature_korb.presentation.add_edit_korb.AddKorbActivity">

    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:inputType="text" />
    <TextView
        android:id="@+id/text_view_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:padding="12dp" />
    <TextView
        android:id="@+id/text_view_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:padding="12dp" />
    <TextView
        android:id="@+id/text_view_accuracy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Accuracy"
        android:padding="12dp" />
    <Button
        android:id="@+id/button_get_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Location"/>
</LinearLayout>